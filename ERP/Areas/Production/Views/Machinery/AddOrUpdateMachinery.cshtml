@await Html.PartialAsync("_ValidationScriptsPartial")
<script type="text/javascript">
    var urlsave = '@Url.Action("AddOrUpdateMachinery", "Machinery")';
    function fnSubmit() {
        if ($("#formMachinery").valid()) {
            var l = laddaStart('btnSave');
            console.log(l);
            modeldata = $("#formMachinery").serialize();
            $.ajax({
                type: 'POST',
                url: urlsave,
                data: modeldata,
                dataType: 'json',
                beforeSend: function () { },
                success: function (data) {
                    if (data.status) {
                        //notification
                        $("#canvas_Machinery").hide();//('hide');
                        Lobibox.notify('success', {
                            pauseDelayOnHover: true,
                            size: 'mini',
                            icon: 'bx bx-check-circle',
                            continueDelayOnInactiveTab: false,
                            position: 'bottom right',
                            msg: data.message
                        });
                        window.location.reload().delay(3000);
                    }
                    else {
                        Lobibox.notify('error', {
                            pauseDelayOnHover: true,
                            size: 'mini',
                            icon: 'bx bx-check-circle',
                            continueDelayOnInactiveTab: false,
                            position: 'bottom right',
                            msg: data.message
                        });
                    }
                },
                error: function (error) {
                    laddaStop(l);
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: "@MessageHelper.Error"
                    });
                }
            }).always(function () {
                hideLoader();
            });
        }
    };

    $(document).ready(function () {

        let ItemGroupIDs = document.getElementById("choices-multiple-remove-button-ItemGroupID").value;
        $.each(ItemGroupIDs.split(","), function (i, e) {
            $("#choices-multiple-remove-button-ItemGroupID option[value=" + e + "]").prop("selected", true);
        });
        
        let ItemSubGroupIDs = document.getElementById("choices-multiple-remove-button-ItemSubGroupID").value;
        $.each(ItemSubGroupIDs.split(","), function (i, e) {
            $("#choices-multiple-remove-button-ItemSubGroupID option[value=" + e + "]").prop("selected", true);
        });

        let MachineCategoryIDs = document.getElementById("choices-multiple-remove-button-MachineCategoryID").value;
        $.each(MachineCategoryIDs.split(","), function (i, e) {
            $("#choices-multiple-remove-button-MachineCategoryID option[value=" + e + "]").prop("selected", true);
        });

        let MachineOperatingStatusIDs = document.getElementById("choices-multiple-remove-button-MachineOperatingStatusID").value;
        $.each(MachineOperatingStatusIDs.split(","), function (i, e) {
            $("#choices-multiple-remove-button-MachineOperatingStatusID option[value=" + e + "]").prop("selected", true);
        });


         
        var multipleCancelButtonDepartmentID = new Choices("#choices-multiple-remove-button-DepartmentID", 
        {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });

        var multipleCancelButtonItemGroup = new Choices("#choices-multiple-remove-button-ItemGroupID", {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });
        var multipleCancelButtonItemSubGroup = new Choices("#choices-multiple-remove-button-ItemSubGroupID", {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });
        var multipleCancelButtonMachineCategoryID = new Choices("#choices-multiple-remove-button-MachineCategoryID", {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });

        var multipleCancelButtonParty = new Choices("#choices-multiple-remove-button-MachineOperatingStatusID", {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });



    });


</script>