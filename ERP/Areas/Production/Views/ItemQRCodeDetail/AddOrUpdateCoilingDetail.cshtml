@using Business.Entities.Production.ItemQRCodeDetailModel;
@model ItemQRCodeDetail;
@{
    //$ViewBag$
}
<style>
    fieldset {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
        background-color: #fff;
    }

    legend {
        font-weight: 200;
        border: 1px solid #ccc;
        border-radius: 25px;
        background-color: #f5f5f5;
        margin: -30px 0px 20px 0;
        width: 50%;
        text-align: center;
        color: black;
    }

    .box {
        width: auto;
        height: auto;
    }
</style>


<form class="form-horizontal" role="form" id="formItemQRCodeDetail">
    <div class="row">
        <div class="col-md-12">
            <div class="row mb-3">
                <input type="hidden" asp-for="ItemQRCodeDetailID" />
                <div class="col-sm-9">
                    @*  <input type="text" required="" class="form-control" id="ItemQRCodeDetailText" name="ItemQRCodeDetailText" asp-for="ItemQRCodeDetailText">
                    <span asp-validation-for="ItemQRCodeDetailText" class="text-danger"></span>*@
                </div>
            </div>
            <fieldset class="card">

                <legend><label> Enter Coiling Detail</label></legend>

                <div class='row mt-3'>
                    <div class="row">
                        <div class=" col-sm-6 col-md-6 col-lg-6">
                            <div class='row mb-3'>
                                <label for='' class='col-sm-4 col-form-label'>SO No</label>
                                <div class='col-sm-8'>
                                    <input type='text' class='form-control' id='SONo' asp-for='SONo' name='SONo'>
                                    <span asp-validation-for='SONo' class='text-danger'>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class=" col-sm-6 col-md-6 col-lg-6">
                            <div class='row mb-3'>
                                <label for='' class='col-sm-4 col-form-label'>SO Date</label>
                                <div class='col-sm-6'>
                                    <input type='date' class='form-control' id='SODate' asp-for='SODate' name='SODate'>
                                    <span asp-validation-for='SODate' class='text-danger'>
                                    </span>
                                </div>
                            </div>
                        </div>

                    </div>


                    <div class='col-12'>



                        <div class='row mb-3'>
                            <label for='' class='col-sm-3 col-form-label'>Planning Card</label>
                            <div class='col-sm-4'>
                                <input type='text' class='form-control' id='PlanningCard' asp-for='PlanningCard' name='PlanningCard'>
                                <span asp-validation-for='PlanningCard' class='text-danger'>
                                </span>
                            </div>
                        </div>

                        <div class='row mb-3'>
                            <label for='' class='col-sm-3 col-form-label'>Machinery</label>
                            <div class='col-sm-5'>
                                <select class='form-select' asp-for='MachineryID' id='choices-multiple-remove-button-MachineryID' asp-items='@CommonExtension.GetAllMachineryAsync()'>
                                    <option value=''>Select here...</option>
                                </select>
                            </div>
                        </div>

                        <div class='row mb-3'>
                            <label for='' class='col-sm-3 col-form-label'>Item</label>
                            <div class='col-sm-9'>
                                <select class='form-select' asp-for='ItemID' id='choices-multiple-remove-button-ItemID' asp-items='@CommonExtension.GetAllItemAsync()'>
                                    <option value=''>Select here...</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class=" col-sm-6 col-md-6 col-lg-6">
                                <div class='row mb-3'>
                                    <label for='' class='col-sm-4 col-form-label'>UOM</label>
                                    <div class='col-sm-8'>
                                        <select class='form-select' asp-for='UOMID' id='choices-multiple-remove-button-UOMID' asp-items='@CommonExtension.GetAllUOMAsync()'>
                                            <option value=''>Select here...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-sm-6 col-md-6 col-lg-6">
                                <div class='row mb-3'>
                                    <label for='' class='col-sm-4 col-form-label'>Quantity</label>
                                    <div class='col-sm-5'>
                                        <input type='text' class='form-control' id='Qty' asp-for='Qty' name='Qty'>
                                        <span asp-validation-for='Qty' class='text-danger'>
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class=" col-sm-6 col-md-6 col-lg-6">
                                <div class='row mb-4'>
                                    <label for='' class='col-sm-4 col-form-label'>Department</label>
                                    <div class='col-sm-8'>
                                        <select class='form-select' asp-for='DepartmentID' id='choices-multiple-remove-button-DepartmentID' asp-items='@CommonExtension.GetAllDepartmentAsync()'>
                                            <option value=''>Select here...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class=" col-sm-6 col-md-6 col-lg-6">
                                <div class='row mb-4'>
                                    <label for='' class='col-sm-4 col-form-label'>Location</label>
                                    <div class='col-sm-8'>
                                        <select class='form-select' asp-for='LocationID' id='choices-multiple-remove-button-LocationID' asp-items='@CommonExtension.GetAllLocationAsync()'>
                                            <option value=''>Select here...</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class='row mb-3'>
                            @* <label for='' class='col-sm-3 col-form-label'>IsQRCodeGenerated:</label> *@
                            <div class='col-sm-9'><input type='hidden' class='form-check-input' role='switch' asp-for='IsQRCodeGenerated'> </div>
                        </div>
                        <div class='row mb-3'>
                            @* <label for='' class='col-sm-3 col-form-label'>NoOfTakenPrint</label> *@
                            <div class='col-sm-9'>
                                <input type='hidden' class='form-control' id='NoOfTakenPrint' asp-for='NoOfTakenPrint' name='NoOfTakenPrint'>
                            </div>
                        </div>

                    </div>
                </div>

            </fieldset>

            <div class="modal-footer-sticky text-center">
                <button id="btnSave" type="button" onclick="fnSubmit()" class="btn btn-primary btn-info px-5 ladda-button">Submit</button>
                <button type="button" data-bs-dismiss="offcanvas" class="btn btn-primary btn-info px-5 my-2">Back</button>
            </div>
        </div>
    </div>
</form>
@await Html.PartialAsync("_ValidationScriptsPartial")
<script type="text/javascript">
    var urlsave = '@Url.Action("AddOrUpdateItemQRCodeDetail", "ItemQRCodeDetail")';
    function fnSubmit() {
        if ($("#formItemQRCodeDetail").valid()) {
            var l = laddaStart('btnSave');
            console.log(l);
            modeldata = $("#formItemQRCodeDetail").serialize();
            $.ajax({
                type: 'POST',
                url: urlsave,
                data: modeldata,
                dataType: 'json',
                beforeSend: function () { },
                success: function (data) {
                    if (data.status) {
                        //notification
                        $("#canvas_masterentity2").hide();//('hide');
                        Lobibox.notify('success', {
                            pauseDelayOnHover: true,
                            size: 'mini',
                            icon: 'bx bx-check-circle',
                            continueDelayOnInactiveTab: false,
                            position: 'bottom right',
                            msg: data.message
                        });
                        window.location.reload().delay(3000);
                    }
                    else {
                        Lobibox.notify('error', {
                            pauseDelayOnHover: true,
                            size: 'mini',
                            icon: 'bx bx-check-circle',
                            continueDelayOnInactiveTab: false,
                            position: 'bottom right',
                            msg: data.message
                        });
                    }
                },
                error: function (error) {
                    laddaStop(l);
                    Lobibox.notify('error', {
                        pauseDelayOnHover: true,
                        size: 'mini',
                        icon: 'bx bx-check-circle',
                        continueDelayOnInactiveTab: false,
                        position: 'bottom right',
                        msg: "@MessageHelper.Error"
                    });
                }
            }).always(function () {
                hideLoader();
            });
        }
    };

    $(document).ready(function () {





        var multipleCancelButtonParty = new Choices('#choices-multiple-remove-button-MachineryID', {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });

        var multipleCancelButtonParty = new Choices('#choices-multiple-remove-button-ItemID', {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });

        var multipleCancelButtonParty = new Choices('#choices-multiple-remove-button-UOMID', {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });

        var multipleCancelButtonParty = new Choices('#choices-multiple-remove-button-DepartmentID', {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });

        var multipleCancelButtonParty = new Choices('#choices-multiple-remove-button-LocationID', {
            removeItemButton: false,
            maxItemCount: 10,
            searchResultLimit: 10,
            renderChoiceLimit: 10
        });
    });


</script>